#!/bin/sh

#PBS -j oe
#PBS -o /lfs/h2/emc/ptmp/yali.mao/working_wafs/log.wafs_grib2
#PBS -N wafs_grib2
#PBS -l walltime=00:30:00
#PBS -l select=1:ncpus=18:mem=80GB
#PBS -q debug
#PBS -A GFS-DEV
##PBS -V
##PBS -W umask=022

#As first line, cd to current working directory where the job was submitted from
#cd $PBS_O_WORKDIR

set -xa

# specify computation resource
#OpenMP
#export OMP_NUM_THREADS=128
#export OMP_PLACES=cores
#Serial
export threads=1
export OMP_NUM_THREADS=$threads
export MP_LABELIO=yes

############################################
# Set up the HOME directory
############################################
export NWROOT=/lfs/h2/emc/vpppg/noscrub/yali.mao/git
export HOMEwafs=${HOMEwafs:-${NWROOT}/WAFS.fork}

############################################
# Loading module
############################################
source $HOMEwafs/versions/run.ver
module reset
source $HOMEwafs/dev/modulefiles/wafs.sh

# For MPMD
module load cray-pals/$craypals_ver
module load cfp/$cfp_ver

module list

############################################
# Modify ROOT after loading modules
############################################
export DBNROOT=${UTILROOT}/fakedbn

############################################
# Define envir
############################################
### envir: prod/dev/para/bkup/ges/test bkup2/ges2/para2/prod2/prd_p6
export envir=para

############################################
# set NET RUN
############################################
### NET: gfs/para/parallel-test/nam/rap/ dump/ens/nawips/nesdis/
export NET=wafs
export RUN=wafs

############################################
# user defined
############################################
export pid=${pid:-$$}
export jobid=${job}.${pid}

export PDY=20240522

export cyc=${cyc:-00}

# wafs_grib2 for generating global WAFS on grid 45
export job=wafs_grib2_${cyc}

USER=`whoami`

############################################
# SENDCOM=YES--Copy output file to /com
# SENDECF=YES--Allow to talk back to ECF
# SENDDBN=YES--Alert output file to TOC
# KEEPDATA=NO--Remove temporary working
############################################
export SENDCOM=YES
export SENDDBN=YES
export SENDDBN_NTC=YES
export KEEPDATA=YES
 
############################################
# Define DATA, COMOUT and COMIN
############################################

export COMROOT=/lfs/h2/emc/ptmp/$USER/wafs_dwn/$envir/com

export COMPATH=${COMPATHgfs:-/lfs/h1/ops/prod/com/gfs}:/lfs/h2/emc/vpppg/noscrub/yali.mao/separation/prod/com/wafs

export DATA=/lfs/h2/emc/ptmp/$USER/working_wafs/grib2.$jobid

############################################
# run the job
#############################################

export FHOURS=

sh $HOMEwafs/jobs/JWAFS_GRIB2

exit
